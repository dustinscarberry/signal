{% extends 'dashboard/dashboardbase.html.twig' %}
{% form_theme userForm 'form/fields.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <a class="breadcrumb-link" href="/dashboard/services">Users</a>
          <span class="breadcrumb">Edit</span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="dashboard-panel-block">
          {{ form_start(userForm) }}
          {{ form_widget(userForm) }}
          <button class="btn btn-primary" type="submit">Update User</button>
          <button name="regenerateApiToken" class="btn btn-primary" type="submit" value="regenerateApiToken">Regenerate API Token</button>
          {{ form_end(userForm) }}
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
