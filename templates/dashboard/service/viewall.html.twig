{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Services</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/services/add">Add Service</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <table id="service-view-table" class="uk-table uk-table-hover uk-table-striped is-hidden">
          <thead>
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            {% for service in services %}
            <tr data-id="{{ service.hashId }}">
              <td data-order="{{ service.name }}">
                <div class="list-item">
                  <div class="list-item-decoration">
                    <i class="list-item-bubble status-bubble status-bubble-{{ service.status.type }}"></i>
                  </div>
                  <div class="list-item-content">
                    <span class="list-item-title">{{ service.name }}</span>
                    <span class="list-item-description ellipsis-3">{{ service.description }}</span>
                  </div>
                </div>
              </td>
              <td>
                <button class="btn btn-error pull-right btn-delete">Delete</button>
                <a href="/dashboard/services/{{ service.hashId }}" class="btn btn-primary pull-right">Edit</a>
              </td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{% endblock %}
