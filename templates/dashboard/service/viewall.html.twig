{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Services</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/services/add">Add Service</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="dashboard-panel-block">
          <div id="service-view-list" class="table-list">

            {% for service in services %}

            <div class="list-item" data-id="{{ service.guid }}">
              <div class="list-item-left">
                <div class="list-item-decoration">
                  <i class="list-item-bubble status-bubble status-bubble-{{ service.status.type }}"></i>
                </div>
                <div class="list-item-content">
                  <span class="list-item-title">{{ service.name }}</span>
                  <span class="list-item-description">{{ service.description }}</span>
                </div>
              </div>
              <div class="list-item-right">
                <a class="btn btn-primary" href="/dashboard/services/{{ service.guid }}">Edit</a>
                <button class="btn btn-error btn-delete">Delete</button>
              </div>
            </div>
            {% endfor %}

            {% if services is empty %}
            <span class="empty-list">Nothing to report on here</span>
            {% endif %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
