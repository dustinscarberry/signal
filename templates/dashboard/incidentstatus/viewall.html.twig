{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Incident Statuses</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/statuses/incident/add">Add Status</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="dashboard-panel-block">
          <div id="incident-status-view-list" class="table-list">

            {% for status in incidentStatuses %}
              <div class="list-item" data-id="{{ status.hashId }}">
                <div class="list-item-left">
                  <span class="list-item-title">{{ status.name }}</span>
                  <span class="list-item-description">...</span>
                </div>
                <div class="list-item-right">
                  <button class="btn btn-primary" onclick="window.location.href='/dashboard/statuses/incident/{{ status.hashId }}'" {% if not status.editable %}disabled{% endif %}>Edit</button>
                  <button class="btn btn-error btn-delete" {% if not status.deletable %}disabled{% endif %}>Delete</button>
                </div>
              </div>
            {% endfor %}

            {% if incidentStatuses is empty %}
              <span class="empty-list">No statuses created</span>
            {% endif %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
