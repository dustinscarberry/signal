{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Incident Statuses</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/statuses/incident/add">Add Status</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <table id="incident-status-view-table" class="uk-table uk-table-hover uk-table-striped is-hidden">
          <thead>
            <tr>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            {% for status in incidentStatuses %}
            <tr data-id="{{ status.hashId }}">
              <td>{{ status.name }}</td>
              <td>
                <button class="btn btn-error pull-right btn-delete">Delete</button>
                <button class="btn btn-primary pull-right" onclick="window.location.href='/dashboard/statuses/incident/{{ status.hashId }}'" {% if not status.editable %}disabled{% endif %}>Edit</button>
              </td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{% endblock %}
