{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Service Statuses</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/statuses/service/add">Add Status</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <table id="service-status-view-table" class="uk-table uk-table-hover uk-table-striped is-hidden">
          <thead>
            <tr>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            {% for status in serviceStatuses %}
            <tr data-id="{{ status.guid }}">
              <td>{{ status.name }}</td>
              <td>
                <button class="btn btn-error pull-right btn-delete">Delete</button>
                <button class="btn btn-primary pull-right" onclick="window.location.href='/dashboard/statuses/service/{{ status.guid }}'" {% if not status.editable %}disabled{% endif %}>Edit</button>
              </td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
