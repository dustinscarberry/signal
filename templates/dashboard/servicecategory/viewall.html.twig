{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Service Categories</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/servicecategories/add">Add Service Category</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="dashboard-panel-block">
          <div id="service-category-view-list" class="table-list">

            {% for serviceCategory in serviceCategories %}
              <div class="list-item" data-id="{{ serviceCategory.hashId }}">
                <div class="list-item-left">
                  <span class="list-item-title">{{ serviceCategory.name }}</span>
                  <span class="list-item-description">{{ serviceCategory.hint }}</span>
                </div>
                <div class="list-item-right">
                  <a class="btn btn-primary" href="/dashboard/servicecategories/{{ serviceCategory.hashId }}">Edit</a>
                  <button class="btn btn-error btn-delete" {% if not serviceCategory.deletable %}disabled{% endif %}>Delete</button>
                </div>
              </div>
            {% endfor %}

            {% if serviceCategories is empty %}
              <span class="empty-list">No categories created</span>
            {% endif %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
