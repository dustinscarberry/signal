{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Service Categories</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/servicecategories/add">Add Service Category</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <table id="servicecategory-view-table" class="uk-table uk-table-hover uk-table-striped is-hidden">
          <thead>
            <tr>
              <th>Category</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            {% for serviceCategory in serviceCategories %}
            <tr data-id="{{ serviceCategory.hashId }}">
              <td data-order="{{ serviceCategory.name }}">
                <div class="list-item">
                  <span class="list-item-title">{{ serviceCategory.name }}</span>
                  <span class="list-item-description ellipsis-3">{{ serviceCategory.hint }}</span>
                </div>
              </td>
              <td>
                <button class="btn btn-error pull-right btn-delete" {% if not serviceCategory.editable %}disabled{% endif %}>Delete</button>
                <button class="btn btn-primary pull-right" onclick="window.location.href='/dashboard/servicecategories/{{ serviceCategory.hashId }}'" {% if not serviceCategory.editable %}disabled{% endif %}>Edit</button>
              </td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{% endblock %}
