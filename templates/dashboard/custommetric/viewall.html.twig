{% extends 'dashboard/dashboardbase.html.twig' %}

{% block panel %}

<div class="dashboard-subheader">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-container">
          <span class="breadcrumb">Custom Metrics</span>
        </div>
        <a class="action-btn btn btn-primary pull-right" href="/dashboard/custommetrics/add">Add Custom Metric</a>
      </div>
    </div>
  </div>
</div>
<div class="dashboard-panels">
  <div class="container-fluid container-fixed-lg">
    <div class="row">
      <div class="col-lg-12">
        <table id="custommetric-view-table" class="uk-table uk-table-hover uk-table-striped is-hidden">
          <thead>
            <tr>
              <th>Name</th>
              <th>Id</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            {% for metric in metrics %}
            <tr data-id="{{ metric.hashId }}">
              <td>{{ metric.name }}</td>
              <td>{{ metric.hashId}}</td>
              <td>
                <button class="btn btn-error pull-right btn-delete">Delete</button>
                <a class="btn btn-primary pull-right" href="/dashboard/custommetrics/{{ metric.hashId }}">Edit</a>
              </td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{% endblock %}
